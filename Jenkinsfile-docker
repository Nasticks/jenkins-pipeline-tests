pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from your repository
              git 'https://github.com/Nasticks/jenkins-pipeline-tests.git'  
                
            }
        }
        
        stage('Build') {
            steps {
                script {
                    // No build steps are needed for a simple Hello World
                    echo 'Building the Hello World application...'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Start a simple HTTP server to serve the Hello World page
                    echo 'Deploying the Hello World application...'
                    sh 'python3 -m http.server 8000'
                }
            }
        }
    }
}









